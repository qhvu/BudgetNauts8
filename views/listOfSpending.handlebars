<!doctype html>

<html>
 <head>
    <title>List Of Spending</title>
    <link rel="shortcut icon" href ="images/batLogo2.png"/>

  <meta name = "viewport" content="device-width, initial-scale=1.0">
  {{> cssStyles}}




 </head>

<body>

{{> header}}

    <div style = "float:right;" class = "">
      <a href="#" id = "button" class = "button">+</a>
    </div>

    <table class='table-striped ' id = "table1">
      <thead>
          <th>Date</th>
          <th>Name</th>
          <th>Category</th>
          <th>Price</th>
      </thead>

      <tbody>
      	{{#each purchase}}

          	<td data-label = "Date">{{date}}</td>
          	<td data-label = "Name">{{name}}</td>
          	<td data-label = "Category">{{category}}</td>
          	<td data-label = "Price">${{price}}</td>
            <td class = "text-center"><button type = "button" class = "btn" id="remove">Remove</button></td>
        	</tr>
    	</div>
        {{/each}}
      </tbody>
    </table>
    <input type='button' id='hideshow' value='EditBudget' class="button">
<div class = "bg-modal">
  <div class = "modal-content">
    <div class = "close">+</div>
    <form method = "get" action = "/add" style="text-align: center">
      <h1>+</h1>
      <input type = "date" placeholder="Date" name="date">
      <input type = "text" placeholder="Name" name="name">
      <input type = "text" placeholder="Category" name="category">
      <input type = "text" placeholder="Price" name="price">
      <input type ="submit" id = "add" class = "button">
    </form>
  </div>
</div>

{{> bootstrapFiles}}

<script src="./js/menuButton.js"></script>
<script src="./js/listOfSpending.js"></script>


</body>
</html>
